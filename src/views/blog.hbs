<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/assets/css/blog.css" />
    <link rel="stylesheet" href="/assets/css/nav.css" />
    <link rel="stylesheet" href="/assets/css/index.css" />
    <link rel="stylesheet" href="/assets/css/blog-detail.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary px-5">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img src="./assets/img/logo.png" alt="logo-dumbways" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                class="nav-link"
                aria-current="page"
                href="./homeBs.html"
              >Home</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link active"
                aria-current="page"
                href="./blogBs.html"
              >Blog</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="./testimonialBs.html">Testimonial</a>
            </li>
          </ul>
          <a href="./contactBs.html"><button
              type="button"
              class="btn btn-dark"
            >Contact Me</button></a>
        </div>
      </div>
    </nav>
    <div class="container d-flex flex-column">
      <div class="w-100 d-flex justify-content-end mb-3">
        <a href="add-blog" class="btn btn-dark">Add New Blog</a>
      </div>
      <div id="contents">
        {{#each data}}
          <div class="card">
            <div class="container-img">
              <img src="assets/img/mine.jpg" alt="Programming" />
            </div>
            <div class="card-content">
              <div class="container-content">
                <a
                  href="/blog-detail/{{id}}"
                  target="_blank"
                >{{this.title}}</a>
                <p>  12 Juli 2021 22:30 WIB | Ichsan Emrald Alamsyah</p>
                <div class="description">
                  <p>{{this.content}}</p>
                  renderTechIcons
                </div>
                <div class="gabung-submit">
                  <div class="submit-project">
                    <button>Edit</button>
                  </div>
                  <div class="submit-project">
                    <button>Delete</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {{/each}}

      </div>
    </div>
    <script src="/assets/js/bootstrap.bundle.min.js"></script>
    <script src="./assets/js/nav.js"></script>
  </body>
</html>